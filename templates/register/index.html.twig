{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>{{ 'info_register_form_title'| trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('register_form') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-left">
        <a href="{{ url('main_index') }}" class="btn btn-lg btn-primary">
            {{ 'action_back'| trans }}
        </a>
    </div>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_send'| trans }}" class="btn btn-primary" />
    </div>

    {{ form_end(form) }}
{% endblock %}